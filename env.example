# Pipeline Security Analysis - Environment Variables Template
# Copy this file as .env and enter your values

# =============================================================================
# AZURE DEVOPS CONFIGURATION
# =============================================================================

# Azure DevOps Organization
AZURE_ORGANIZATION=your-organization

# Azure DevOps Project
AZURE_PROJECT=your-project

# Pipeline Definition ID
AZURE_DEFINITION_ID=123

# Personal Access Token
AZURE_PAT=your-personal-access-token

# Azure DevOps Server URL
AZURE_DEVOPS_SERVER_URL=https://dev.azure.com

# API Version
AZURE_API_VERSION=6.0

# Repository ID
AZURE_REPOSITORY_ID=your-repository-id

# Build ID (for testing)
AZURE_BUILD_ID=123

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# Webhook Server URL (ngrok)
WEBHOOK_SERVER_URL=https://your-ngrok-url.ngrok-free.app

# Webhook Polling Interval (seconds)
WEBHOOK_POLLING_INTERVAL=5

# Webhook Timeout (seconds)
WEBHOOK_TIMEOUT=30

# =============================================================================
# SLACK CONFIGURATION
# =============================================================================

# Slack Webhook URL (Only this is needed)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK



# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (SQLite default)
DATABASE_URL=sqlite:///data/database/pipeline_security.db

# Database Echo (SQL queries logging)
DATABASE_ECHO=false

# =============================================================================
# SECURITY ANALYSIS CONFIGURATION
# =============================================================================

# Enable Real-time Analysis
ENABLE_REAL_TIME_ANALYSIS=true

# Enable Slack Notifications
ENABLE_SLACK_NOTIFICATIONS=true

# Enable Database Storage
ENABLE_DATABASE_STORAGE=true

# Max Findings Per Pattern
MAX_FINDINGS_PER_PATTERN=3

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# Enable YAML Backup
YAML_BACKUP_ENABLED=true

# Logs Directory
LOGS_DIRECTORY=logs

# YAML Directory
YAML_DIRECTORY=webhook_scripts/logs

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Environment
ENVIRONMENT=development

# Log Level
LOG_LEVEL=INFO

# Azure Log Level
AZURE_LOG_LEVEL=INFO 